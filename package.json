{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tct-one-time-secret",
  "title": "One Time Secret",
  "description": "Share sensitive information with a one-time link using password.link",
  "icon": "icon.png",
  "author": "tdrayson",
  "license": "MIT",
  "commands": [
    {
      "name": "new-secret",
      "title": "New Secret",
      "description": "Create a new encrypted secret",
      "mode": "view",
      "arguments": [
        {
          "name": "message",
          "placeholder": "Message",
          "type": "text",
          "required": true
        },
        {
          "name": "secret",
          "placeholder": "Content",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "list-secrets",
      "title": "List Secrets",
      "description": "View and manage your secrets",
      "mode": "view"
    },
    {
      "name": "new-secret-request",
      "title": "New Secret Request",
      "description": "Create a secret request link",
      "mode": "view"
    },
    {
      "name": "list-secret-requests",
      "title": "List Secret Requests",
      "description": "View and manage your secret requests",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "publicKey",
      "type": "password",
      "required": true,
      "title": "Public API Key",
      "description": "Your password.link public API key"
    },
    {
      "name": "privateKey",
      "type": "password",
      "required": true,
      "title": "Private API Key",
      "description": "Your password.link private API key"
    },
    {
      "name": "baseUrl",
      "type": "textfield",
      "required": false,
      "title": "Base URL",
      "description": "Your password.link domain (e.g., https://password.link or your custom domain)",
      "default": "https://password.link"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^1.17.0",
    "sjcl": "^1.0.8"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "@types/sjcl": "^1.0.34",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
